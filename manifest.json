{
  "manifest_version": 3,
  "name": "Color Picker Extension",
  "version": "1.0",
  "description": "A simple color picker extension",
  "permissions": [
    {
      "host_permissions": [
        "http://*/*",
        "https://*/*",
        "http://localhost/*",
        "https://localhost/*"
      ]
    },
    "activeTab",
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
